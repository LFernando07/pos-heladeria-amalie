{
  "name": "pos-heladeria-amalie",
  "version": "1.0.0",
  "description": "Sistema POS de Heladería Amalie en versión de escritorio.",
  "main": "electron/main.js",
  "author": {
    "name": "Equipo 3",
    "scrummaster": "Luis Fernando Burgos Perea",
    "productOwner": "Jesus Yahir Lopez Villegas",
    "developers": [
      "Jake Eduardo Ponciano Galicia",
      "Abraham Quezada Huicochea",
      "Daniel Toledo Villegas"
    ]
  },
  "license": "ISC",
  "scripts": {
    "postinstall": "cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"cross-env NODE_ENV=development electron .\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "cd frontend && npm run build",
    "start": "electron .",
    "make": "npm run build && electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LFernando07/pos-heladeria-amalie.git"
  },
  "keywords": [
    "electron",
    "pos",
    "heladeria",
    "desktop"
  ],
  "bugs": {
    "url": "https://github.com/LFernando07/pos-heladeria-amalie/issues"
  },
  "homepage": "https://github.com/LFernando07/pos-heladeria-amalie#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "38.1.0",
    "electron-builder": "^26.0.12",
    "cross-env": "^7.0.3",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.heladeria.amelie",
    "productName": "POS Heladeria Amelie",
    "directories": {
      "output": "app",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "backend/node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules"
      }
    ],
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/logo_amelie.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Heladería Amalie POS"
    }
  }
}
